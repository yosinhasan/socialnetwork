<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.kindhope.model.ConnectionsModel" table="connections" schema="kindhope">
        <composite-id mapped="true" class="com.kindhope.model.ConnectionsModelPK">
            <key-property name="userId" column="user_id"/>
            <key-property name="friendId" column="friend_id"/>
        </composite-id>
        <property name="deletedAt" column="deleted_at"/>
        <property name="createdAt" column="created_at"/>
        <property name="updatedAt" column="updated_at"/>
    </class>
</hibernate-mapping>