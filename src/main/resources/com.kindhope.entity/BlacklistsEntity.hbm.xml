<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.kindhope.entity.BlacklistsEntity" table="blacklists" schema="kindhope">
        <composite-id mapped="true" class="com.kindhope.entity.BlacklistsEntityPK">
            <key-property name="userId" column="user_id"/>
            <key-property name="blockedUserId" column="blocked_user_id"/>
        </composite-id>
        <property name="createdAt" column="created_at"/>
        <many-to-one name="usersByUserId" class="com.kindhope.entity.UsersEntity" insert="false" update="false">
            <column name="user_id" />
        </many-to-one>
        <many-to-one name="usersByBlockedUserId" class="com.kindhope.entity.UsersEntity" insert="false" update="false">
            <column name="blocked_user_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>